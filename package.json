    "test:coverage": "jest --coverage --verbose"
  },
  "keywords": [
    "stoicism",
    "stoic",
    "quotes",
    "philosophy",
    "stoic-quotes",
    "api-client",
    "public-api",
    "wisdom",
    "motivation",
    "quote-api",
    "npm-package",
    "javascript"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.32",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NPM-Workbench/stoicism-api-client"
  },
  "homepage": "https://github.com/NPM-Workbench/stoicism-api-client",
  "bugs": {
    "url": "https://github.com/NPM-Workbench/stoicism-api-client/issues"
